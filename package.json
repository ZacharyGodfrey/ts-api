{
  "scripts": {
    "format": "prettier src/**/*.ts --write",
    "build": "rm -rf build && tsc",
    "start": "node build/scripts/start.js",
    "local": "nodemon --watch src --ext ts --exec ts-node src/scripts/start.ts",
    "schema": "ts-node src/scripts/schema.ts"
  },
  "prettier": {
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true,
    "tabWidth": 2,
    "arrowParens": "avoid",
    "endOfLine": "lf"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.12",
    "@types/node": "^15.12.1",
    "@types/nodemon": "^1.19.0",
    "@types/pg": "^8.6.0",
    "@types/uuid": "^8.3.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.0",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "pg": "^8.6.0",
    "uuid": "^8.3.2"
  }
}
